<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPostOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/tvPostTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/string"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="32dp" />


        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvPostText"
            android:layout_below="@+id/tvPostOwner"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivType"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/none"
                app:srcCompat="@drawable/checked" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/string" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/string" />

            <TextView
                android:id="@+id/tvPurebred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/string" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivFeedPhoto"
            android:layout_width="wrap_content"
            android:layout_height="186dp"
            android:layout_below="@id/tvPostOwner"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="116dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/string"
            android:maxWidth="200dp"
            app:srcCompat="@drawable/missing" />

        <TextView
            android:id="@+id/tvPostText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivFeedPhoto"
            android:padding="10dp"
            android:text="@string/string"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="196dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
