<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="12dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPetType"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@string/none"
            app:srcCompat="@drawable/icon_horse" />

        <TextView
            android:id="@+id/tvPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivPetType"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBreed"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivPetType"
            android:text="@string/age" />

        <TextView
            android:id="@+id/tvPureBred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPetName"
            android:layout_alignStart="@id/tvVaccine"
            android:text="@string/purebred"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvVaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPureBred"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="33dp"
            android:layout_toStartOf="@+id/ivDelete"
            android:text="@string/vaccinated"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPetName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivPetType"
            android:text="@string/breed" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAge"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivPetType"
            android:text="@string/gender" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:contentDescription="@string/none"
            android:visibility="invisible"
            app:srcCompat="@drawable/vector_trash" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
